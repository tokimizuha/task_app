<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.startDay.to_s(:datetime_jp) %> </td>
      <td><%= post.endDay.to_s(:datetime_jp) %> </td>
      <td>
        <% if post.allDay == true %>
         ◯
        <% elsif post.allDay == false %>
        
        <% end %>
      </td>
      <td><%= post.updated_at.to_s(:datetime_jp) %></td>
      <td>
        <%= link_to "確認", post, {class: "kakunin"} %>
      </td>
      <td>
        <%= link_to "編集", [:edit, post], {class: "hensyu"} %>
      </td>
      <td>
        <%= link_to "削除", post, method: :delete, data: {confirm: "本当に削除しますか？",  class: "sakuzyo"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to "スケジュール新規登録", :new_post, {class: "suke"} %>
</p>
